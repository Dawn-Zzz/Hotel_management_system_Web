@model IEnumerable<HotelManagement.LoaiPhong>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="card-title title ml-32">Rooms Type List</h2>

@using (Html.BeginForm("Search", "RoomType", FormMethod.Get, new { @class = "search-form" }))
{
    <div class="input-group">
        <div class="form-outline">

            @Html.TextBox("tenLP", null, new { @class = "form-control bg-light border-0 small" })
        </div>

        <input type="submit" value=" Tìm " tenLP="tenLP" class="btn btn-primary" />
    </div>
}


<p class="ml-32 mt-32 mb-24">
    @Html.ActionLink("Add New Room Type", "Create", "RoomType", null, new { @class = "create-btn" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenLoaiPhong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaLoaiPhong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HinhAnh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoaiPhong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaLoaiPhong)
            </td>
            <td>
                <img src="~/Assets/admin/img/@item.HinhAnh" style="width: 100px;" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaLoaiPhong.Trim() }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaLoaiPhong.Trim() }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaLoaiPhong.Trim() })
            </td>
        </tr>
    }

</table>
