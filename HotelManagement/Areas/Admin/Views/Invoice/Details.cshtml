@model HotelManagement.HoaDon

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="card-title title ml-32">Details Invoice</h2>

<div>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaHoaDon)
            </th>
            <td>
                @Html.DisplayFor(model => model.MaHoaDon)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NgayLapHoaDon)
            </th>
            <td>
                @Html.DisplayFor(model => model.NgayLapHoaDon)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KhachHang.TenKhachHang)
            </th>
            <td>
                @Html.DisplayFor(model => model.KhachHang.TenKhachHang)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KhachHang.SoDienThoai)
            </th>
            <td>
                @Html.DisplayFor(model => model.KhachHang.SoDienThoai)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TienPhong)
            </th>
            <td>
                @Html.DisplayFor(model => model.TienPhong)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TienDichVu)
            </th>
            <td>
                @{
                    var tienDV = Model.TienDichVu ?? 0;
                    @tienDV
                }
            </td>
        </tr>
        <tr>
            <th>
                Total Amount
            </th>
            <td>
                @{
                    var tongTien = Model.TienPhong + (Model.TienDichVu ?? 0);
                    @tongTien
                }
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NhanVien.TenNhanVien)
            </th>
            <td>
                @Html.DisplayFor(model => model.NhanVien.TenNhanVien)
            </td>
        </tr>
    </table>
</div>
<p class="pl-12 ml-16 mt-32 mb-24">
    @Html.ActionLink("Edit", "Edit", new { id = Model.MaHoaDon }, new { @class = "create-btn" })
</p>
<p class="pl-12 ml-16 mt-32 mb-24">
    @Html.ActionLink("Back to List", "Index")
</p>
