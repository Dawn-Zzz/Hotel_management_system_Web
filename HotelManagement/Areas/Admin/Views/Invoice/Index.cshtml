@model IEnumerable<HotelManagement.HoaDon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm("Search", "Invoice", FormMethod.Get, new { @class = "search-form" }))
{
    <div class="input-group">
        <div class="form-outline">

            @Html.TextBox("ngayDau", null, new { @class = "form-control bg-light border-0 small", type = "date" })
            @Html.TextBox("ngayCuoi", null, new { @class = "form-control bg-light border-0 small", type = "date" })
        </div>

        <input type="submit" value=" Tìm " date="date" class="btn btn-primary" />
    </div>
}


@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaHoaDon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KhachHang.TenKhachHang);
        </th>
        <th>
            Total Amount
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NhanVien.TenNhanVien);
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayLapHoaDon)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        if (item.PhieuThue.HienTrang == "Đã trả phòng")
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaHoaDon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.TenKhachHang)
            </td>
            <td>

                @{
                    var tongTien = item.TienPhong + item.TienDichVu;
                    if (item.TienDichVu == null)
                    {
                        tongTien = item.TienPhong;
                    }
                    else
                    {
                        tongTien = item.TienDichVu + item.TienPhong;
                    }
                }
                @tongTien
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhanVien.TenNhanVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayLapHoaDon)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.MaHoaDon.Trim() })
            </td>
        </tr>
        }
    }
</table>