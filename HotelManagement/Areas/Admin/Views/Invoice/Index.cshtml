@model IEnumerable<HotelManagement.HoaDon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm("Search", "Invoice", FormMethod.Get))
{
    <div class="input-group">
        <div class="form-outline">

            <label class="form-label" for="form1">Search</label>
            @Html.TextBox("ngayDau", null, new { @class = "form-control", type = "date" })
            @Html.TextBox("ngayCuoi", null, new { @class = "form-control", type = "date" })
        </div>

        <input type="submit" value=" Tìm " date="date" />
    </div>
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaHoaDon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayLapHoaDon)
        </th>
        <th>
            Tổng tiền
        </th>
        <th>
            Tên Nhân Viên
        </th>
        <th>
            Tên Khách hàng
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaHoaDon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayLapHoaDon)
            </td>
            <td>

                @{
                    var tongTien = item.TienPhong + item.TienDichVu;
                }
                @tongTien
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhanVien.TenNhanVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.TenKhachHang)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.MaHoaDon.Trim() })
            </td>
        </tr>
    }

</table>