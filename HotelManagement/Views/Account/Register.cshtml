                    <span class="label-input100">Password</span>
                    @Html.PasswordFor(m => m.MatKhau, new { @class = "input100", placeholder = "Type your password" })
                    <i class="fa-solid fa-lock input-icon"></i>
                </div>
                    @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })

                <div class="wrap-input100 validate-input m-t-24" data-validate="Password is required">
                    <span class="label-input100">Password</span>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input100", placeholder = "Type your password" })
                    <i class="fa-solid fa-lock input-icon"></i>
                </div>
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
